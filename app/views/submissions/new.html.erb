<%= simple_form_for Submission.new do |f| %>


  <%= f.simple_fields_for :task do |t| %>
    <%= t.input :problem_id do %>
      <%= t.grouped_collection_select :problem_id, Homework.order(:number), :problems, :number, :id, :id, include_blank: false %>
    <% end %>
  <% end %>

  <%= f.submit %>

<% end %>