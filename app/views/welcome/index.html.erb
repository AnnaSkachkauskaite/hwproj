<% if signed_in? %>
	<% if current_user.teacher? %>
		<div class="row">
			<div class="col-md-8">
				<h1>Новости</h1>
				<% @submissions.each do |submission| %>
					<%= link_to submission.user.name, "#" %> добавил <%= link_to "версию #{submission.version}", "#" %> решения <%= link_to "задачи #{submission.task.problem.id}", "#" %> <%= submission.created_at %>
				<% end %>
			</div>
			<div class="col-md-4">
				<div class="row">
					<h1>Дедлайн</h1>
				</div>
				<div class="row">
					<h1>Вопросы по задачам</h1>
				</div>
			</div>
		</div>
	<% end %>
<% end %>